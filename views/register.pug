extends layout

block content
  h2 Register

  form(action="/register", method="post")
    div
      label Type
      select(name="type")
        option Student
        option Faculty

    div
      label Full Name
      input(type="text", name="fullName")

    label Gender
    select(name="gender")
      option Male
      option Female

    div
      label Username
      input(type="text", name="username")

    div
      label Password
      input(type="password", name="password")

    div
      input(type="submit", value="Register")
